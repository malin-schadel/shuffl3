<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-xl-4">
      <div class="cards-container">
        <% @cards.each do |card| %>
          <div class="card-shuffle" style="background-color: <%= card.background %>; color: <%= card.color %>; fill: <%= card.color %>;">
            <%= show_svg(card.icon) %>
            <h3 class="card-title" ><%= card.title %></h3>
            <p class="card-text"><%= card.subline.upcase %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
